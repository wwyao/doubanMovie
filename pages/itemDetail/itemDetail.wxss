.container{
    background: #fff;
}
.top-img{
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    height:200px;
    background: #0D0F45;
}
.top-img image{
    width:40%;
    height: 92%;
}
.top-img .collect{
    position: absolute;
    top:5px;
    right:5px;
    width: 30px;
    height: 30px;
}
.top-img .share{
    position: absolute;
    top:5px;
    left:5px;
    width: 25px;
    height: 25px;
}
.middle-msg{
    position: relative;
    padding: 25px 0 0 10px;
    font-size: 12px;
    color:#989898;
}
.middle-msg view{
    margin-bottom: 5px;
}
.middle-msg view:first-child{
    margin-bottom: 15px;
    font-size: 20px;
    color:#000;
}
.middle-msg .rate{
    position: absolute;
    top: 30px;
    right: 20px;
    width: 60px;
    height: 60px;
    background: #CAE1FF;
    /*border:1px solid #0D0F45;*/
    box-shadow: 0 0 10px -2px #000;
    text-align: center;
}
.rate text{
    display: block;
    margin-bottom: 3px;
}
.rate text:first-child{
    margin-top:10px;
    font-size: 30px;
    color: red;
}
.summary{
    margin:20px 0 0 10px;
    font-size: 12px;
    color:#989898;
}
.summary view{
    margin-top: 10px; 
    padding-right: 23px;
    text-indent: 24px;
    line-height: 16px;
    color: #000;
}
.directors{
    font-size: 12px;
    margin: 20px 0 0 10px;
}
.directors view:first-child{
    color: #989898;
}
.director-item{
    margin-top: 10px;
    width:70px;
    text-align: center;
}
.directors image{
    width:100%;
    height: 100px;
}
.actors{
    display: flex;
    flex-wrap: wrap;
    align-item: flex-start; 
    padding: 20px 0 0 10px;
    font-size: 12px;
}
.actors view:first-child{
    color: #989898;
    width: 100%;
}
.actors .actor-item{
    margin-top: 10px;
    display: inline-block;
    margin-right: 15px;
    width:70px;
}
.actors .actor-item image{
    width:100%;
    height: 100px;
}
.actors .actor-item text{
    display: block;
}