/* pages/search/search.wxss */
.header{
    position: fixed;
    z-index: 1000;
    background: #fff;
}
.search-placeholder{
    font-size: 12px;
    color: #909090;
}
#searchBox {
    padding-left: 5px;
    display: flex;
    align-items: center; 
    height: 35px;
    background: #b9b9b9;
}
#searchBox input{
    margin-left: 5px;
    width: 80%;
    color: #0D3EEB;
}
#genres{
    margin-top: 10px;
}
#genres button{
    margin: 5px 15px;
}
.btn-hover{
    background:#38A4F3;
}
.result{
    padding-top:130px;
}
.list-item{
  position: relative;
  margin:5px 0;
  height: 120px;
  font-size: 14px; 
  /*border-top: 1px solid #b5b5b5;*/
  /*border-bottom: 1px solid #b5b5b5;*/
  box-shadow: 0 0 2px 1px #b5b5b5;
}
.list-item image{
  /*vertical-align: top;*/
  float: left;
  width: 90px;
  height: 100%;
}
.list-item text{
  display: block;
  padding:7px 5px 0px 100px;
}
.list-item .score{
  position: absolute;
  top:0;
  right:0;
  text-align: center;
}
.score text:first-child{
  font-size: 12px;
  color:#909090;
}
.score text:last-child{
  font-size: 25px;
  color:red;
}