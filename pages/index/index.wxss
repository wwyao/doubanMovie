/**index.wxss**/
.search{
  margin: 5px 3%;
  padding: 5px;
  text-align: center;
  font-size: 16px;
  border: 1px solid #909090;
  border-radius: 10px;
  color: #d0d0d0;
}
.search icon{
  position: relative;
  top: 2px;
  margin: 0 10px 0 0;
}
.title1{
  position: relative;
  margin:30px 0;
  text-align: center;
  background: url(../../img/title_bg.png) no-repeat center center;
  background-size: 40%;
}
.title1 text{
  background: #f2f2f2;
}
.swiper swiper-item{
  text-align: center;
  /*background: #436586;*/
}
.swiper swiper-item .slide-image{
  margin:0 1.5%;
  width: 30%;
  height: 100%;
}
.nav{
  display: none;
  
  /*border-bottom:1px solid #909090;*/
}
.nav text{
  flex: 1 1 auto;
  padding: 6px 0;
  background: url(../../img/nav1.png) no-repeat;
  background-size: 20px 20px;
  background-position: left center;
  font-size: 12px;
  text-align: center;
  border-right:1px solid #ffffff;
}
.nav text:last-child{
  border-right:none;
}
.list-item{
  position: relative;
  margin:5px 0;
  height: 120px;
  font-size: 14px; 
  /*border-top: 1px solid #b5b5b5;*/
  /*border-bottom: 1px solid #b5b5b5;*/
  box-shadow: 0 0 2px 1px #b5b5b5;
}
.list-item image{
  /*vertical-align: top;*/
  float: left;
  width: 90px;
  height: 100%;
}
.list-item text{
  display: block;
  padding:7px 5px 0px 100px;
}
.list-item .score{
  position: absolute;
  top:0;
  right:0;
  text-align: center;
}
.score text:first-child{
  font-size: 12px;
  color:#909090;
}
.score text:last-child{
  font-size: 25px;
  color:red;
}
.nav .active{
  background: url(../../img/nav2.png) no-repeat;
  background-size: 20px 20px;
  background-position: left center;
  color: #3045FF;
}
.nav .notactive{
  background: url(../../img/nav1.png) no-repeat;
  background-size: 20px 20px;
  background-position: left center;
  color: #000;
}
